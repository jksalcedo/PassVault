<resources>

    <style name="Base.Theme.PassVault" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors - Neutral/Monochrome -->
        <item name="colorPrimary">@color/neutral_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/grey_200</item>
        <item name="colorOnSecondary">@color/neutral_700</item>

        <!-- Surface colors - Background should be lighter -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceContainer">@color/grey_100</item>
        <item name="colorSurfaceContainerLow">@color/grey_50</item>
        <item name="colorSurfaceContainerHigh">@color/grey_200</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/grey_500</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="fontFamily">@font/worksans_variable</item>
        <item name="android:fontFamily">@font/worksans_variable</item>
    </style>

    <style name="Theme.PassVault" parent="Base.Theme.PassVault" />
</resources>
